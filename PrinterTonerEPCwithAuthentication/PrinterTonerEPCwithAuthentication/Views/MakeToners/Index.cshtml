@model IEnumerable<PrinterTonerEPCwithAuthentication.Models.MakeToner>

@{
    ViewBag.Title = "Index";
}

<h2>Napunjeni/kupljeni toneri</h2>

<p>
    @Html.ActionLink("Unos novog", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Od
        </th>
        <th>
            Model
        </th>
        <th>
            Datum
        </th>
        <th>
            Količina
        </th>
        <th>
           Cena
        </th>
        <th>
            Napomena
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Owner.OwnerName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Toner.TonerModel)
        </td>
        <td>
            @*@Html.DisplayFor(modelItem => item.MakeTonerDate)*@
            @Convert.ToString(string.Format("{0:dd/MM/yyyy}", item.MakeTonerDate))
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MakeTonerQuantity)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MakeTonerPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Remark)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.MakeTonerID }) |
            @*@Html.ActionLink("Details", "Details", new { id=item.MakeTonerID }) |*@
            @Html.ActionLink("Delete", "Delete", new { id=item.MakeTonerID })
        </td>
    </tr>
}

</table>
