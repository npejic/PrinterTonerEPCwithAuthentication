<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">  @*To ensure proper rendering and touch zooming, add the viewport meta tag to your head*@
    <title>Bootstrap 101 Template</title>
</head>

<div class="form-group">
    <form>
        <div class="row">
            <div class="col-xs-3">
                <div class="input-group" style="width:250px">
                    <input type="text" class="form-control" name="searchByPrinter" placeholder="Unesite model štampača">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </span>
                </div>
            </div>
        </div>
    </form>
</div>


<div class="form-group">
    <form>
        <div class="row">
            <div class="col-xs-3">
                <div class="input-group" style="width:250px">
                    <input type="text" class="form-control" name="searchByToner" placeholder="Unesite model tonera">
                    <span class="input-group-btn">
                        <button class="btn btn-default" type="submit"><i class="glyphicon glyphicon-search"></i></button>
                    </span>
                </div>
            </div>
        </div>
    </form>
</div>



<p>
    @Html.ActionLink("Unesi novu vezu", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Proizvođač štampača@*@Html.DisplayNameFor(model => model.Printer.PrinterInternalNo)*@
        </th>
        <th>
            Model štampača@*@Html.DisplayNameFor(model => model.Printer.PrinterInternalNo)*@
        </th>
        <th>
            Model tonera@*@Html.DisplayNameFor(model => model.Toner.TonerModel)*@
        </th>
        <th>
            ProductNo tonera
        </th>
        <th>
            Toner Yield
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Printer.PrinterManufacturer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Printer.PrinterModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Toner.TonerModel)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Toner.TonerProductNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Toner.TonerYield)
            </td>
            <td>
                @Html.ActionLink("Izmeni", "Edit", new { id = item.PrinterTonerCompatibilityID }) |
                @Html.ActionLink("Izbriši", "Delete", new { id = item.PrinterTonerCompatibilityID })
            </td>
        </tr>
    }

</table>
