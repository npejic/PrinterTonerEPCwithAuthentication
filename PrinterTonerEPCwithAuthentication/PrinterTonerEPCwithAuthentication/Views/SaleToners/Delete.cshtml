@model PrinterTonerEPCwithAuthentication.Models.SaleToner

@{
    ViewBag.Title = "Delete";
}

@*<h2>Delete</h2>

<h3>Are you sure you want to delete this?</h3>*@
<div>
    <h4>Brisanje kretanja tonera</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Firma
            @*@Html.DisplayNameFor(model => model.Contract.ContractName)*@
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Owner.OwnerName)
        </dd>

        <dt>
            Toner
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Toner.TonerModel)
        </dd>

        <dt>
           Datum
        </dt>

        <dd>
            @Convert.ToString(string.Format("{0:dd/MM/yyyy}", Model.SaleTonerDate))
            @*@Html.DisplayFor(model => model.SaleTonerDate)*@
        </dd>

        <dt>
            Cena
        </dt>

        <dd>
            @Html.DisplayFor(model => model.TonerPrice)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Izbriši" class="btn btn-default" /> |
            @Html.ActionLink("Povratak", "Index")
        </div>
    }
</div>
